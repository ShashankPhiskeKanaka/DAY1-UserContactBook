generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Contact {
  id          String   @id @default(uuid())
  name        String   @default("NA")
  email       String   @unique
  phonenumber String
  address     String   @default("NA")
  createdAt   DateTime @default(now())

  @@map("contact")
}

model AuditLog {
  id          String   @id @default(cuid())
  model       String
  action      String
  recordId    String
  before      Json?
  after       Json?
  metadata    Json?
  performedAt DateTime @default(now())

  @@index([model, recordId])
  @@map("auditlog")
}
